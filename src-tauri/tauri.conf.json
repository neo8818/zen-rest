{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rest App",
  "version": "1.0.0",
  "identifier": "com.rest.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Zen Rest",
        "width": 420,
        "height": 620,
        "resizable": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
